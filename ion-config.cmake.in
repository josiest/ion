@PACKAGE_INIT@
set(_ion_supported_components ion graphics input window yaml-serialization)
set(_ion_subdirs graphics input window serialization)

foreach (_subdir ${_ion_subdirs})
    list(APPEND CMAKE_PREFIX_PATH ${CMAKE_CURRENT_LIST_DIR}/${_subdir})
endforeach()

foreach (_comp ${ion_FIND_COMPONENTS})
    if (NOT _comp IN_LIST _ion_supported_components)
        set(ion_FOUND False)
        set(ion_NOT_FOUND_MESSAGE "Unsupported component: ${_comp}")

    elseif (_comp STREQUAL "ion")
        include("${CMAKE_CURRENT_LIST_DIR}/ion-core-config.cmake")
    else()
        include("${CMAKE_CURRENT_LIST_DIR}/${_comp}/ion-${_comp}-config.cmake")
    endif()
endforeach()